
//'use strict'
const fs = require('fs');

// Función para contar el número de saltos de línea en el archivo
function contarSaltosDeLinea(, callback) {
    fs.readFile(rutaArchivo, 'utf8', (error, data) => {
        if (error) {
            callback(error);
            return;
        }

        // Contar el número de saltos de línea ('\n')
        const numSaltosDeLinea = data.split('\n').length - 1;
        callback(null, numSaltosDeLinea);
    });
}

